---
import Layout from "../layouts/Layout.astro";
import LandingHeader from "../components/LandingHeader.astro";
import HomeSection from "../components/HomeSection.astro";
import WhoAreSection from "../components/WhoAreSection.astro";
import ServicesSection from "../components/ServicesSection.astro";
import GallerySection from "../components/GallerySection.astro";
---

<Layout title="Welcome to CCG">
	<LandingHeader/>
	<main class="snap-y snap-mandatory relative w-full h-screen overflow-auto scroll-smooth">
		<div class="snap-none">
			<HomeSection/>
		</div>
		<div class="snap-none">
			<WhoAreSection/>
		</div>
		<div class="snap-none">
			<ServicesSection/>
		</div>
		<div class="snap-none">
			<GallerySection/>
		</div>
	</main>
</Layout>
